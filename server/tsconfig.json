{
  "compilerOptions": {
    "target": "es2021",
    "module": "node16",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@src/*": ["./*"]
    }
  },
  "include": ["src/**/*", "eslintrc.config.mjs"]
}
